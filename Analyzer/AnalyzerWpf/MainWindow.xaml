<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AnalyzerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Analizador de Codigo C#" Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Analizador de Código C#" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
            <Button x:Name="BtnSelectFile" Content="Seleccionar archivo (.csproj, .sln)" Width="250" Height="40" Click="BtnSelectFile_Click" />
            <TextBlock x:Name="TxtSelectedFile" Margin="0,10,0,10" FontWeight="Bold" />
            <TreeView x:Name="TreeStructure" Height="200" Margin="0,10,0,10" SelectedItemChanged="TreeStructure_SelectedItemChanged" />
            <TextBlock Text="Archivos del proyecto seleccionado:" FontWeight="Bold" Margin="0,10,0,0" />
            <ListBox x:Name="ProjectFilesList" Height="200" Margin="0,5,0,0" />
            <TextBlock x:Name="TxtResult" Margin="0,20,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
